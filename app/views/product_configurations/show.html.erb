<%- model_class = ProductConfiguration -%>
<div class="page-header">
  <h1><%=t '.title', :default => ProductConfiguration %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:color) %></dt>
      <dd><pre class="prettyprint"><%= @product_configuration.color %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:size) %></dt>
      <dd><pre class="prettyprint"><%= @product_configuration.size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cogs) %></dt>
      <dd><pre class="prettyprint"><%= @product_configuration.cogs %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sku) %></dt>
      <dd><pre class="prettyprint"><%= @product_configuration.sku %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image_url) %></dt>
      <dd><pre class="prettyprint"><%= @product_configuration.image_url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              product_configurations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_configuration_path(@product_configuration), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_configuration_path(@product_configuration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

