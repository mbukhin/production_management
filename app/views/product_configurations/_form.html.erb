<%= simple_form_for(@product_configuration) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :color %>
    <%= f.input :size %>
    <%= f.input :cogs %>
    <%= f.association :product %>
    <%= f.input :sku %>
    <%= f.input :image_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
